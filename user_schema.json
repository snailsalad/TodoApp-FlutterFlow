{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/user_schema.json",
  "title": "users/{docId}",
  "description": "Schema for a single document in the Firestore 'users' collection.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "birthdate": {
      "$ref": "#/$defs/timestamp",
      "description": "User birthdate as a timestamp."
    },
    "created_time": {
      "$ref": "#/$defs/timestamp",
      "description": "Account creation timestamp."
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name for the user."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address."
    },
    "photo_url": {
      "$ref": "#/$defs/url",
      "description": "Profile photo URL."
    },
    "uid": {
      "type": "string",
      "minLength": 1,
      "description": "Authentication UID (e.g., Firebase Auth UID)."
    }
  },
  "required": ["created_time", "display_name", "email", "uid"],
  "$defs": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 timestamp (e.g., 2024-06-17T05:55:17-04:00)."
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "HTTPS URL."
    }
  },
  "examples": [
    {
      "birthdate": "2003-05-02T00:00:00-04:00",
      "created_time": "2024-06-17T05:55:17-04:00",
      "display_name": "Casey",
      "email": "casey@mail.com",
      "photo_url": "https://firebasestorage.googleapis.com/v0/wyz",
      "uid": "5QJ30SbaohTD45Zb3DuijTbmKIxx"
    }
  ]
}
